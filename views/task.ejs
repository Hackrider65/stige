<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <style>
      *{
    margin: 0;
    border: 0;
    font-family: poppins, sans-serif;
}

.logo{
    width: 150px;
    cursor: pointer;
}

.navbar{
    width: 85%;
    margin: auto;
    padding: 10px 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 100px;
    border-bottom: solid 1px rgb(102, 33, 102);
    position: relative;
    
}
.navbar ul li{
    list-style: none;
    display: inline-block;
    margin: 0 20px;
    position: relative;
}

.navbar ul li a{
    text-decoration: none;
    
}
.navbar ul li ::after{
    content: '';
    height: 3px;
    width: 0%;
    background: rgb(114, 18, 114);
    position: absolute;
    left: 0;
    bottom: -10px;
    transition: 0.5s;
    display: block;
}
.navbar ul li :hover::after{
    width: 100%;
}
.mainMenu .closeMenu{
    display:none;
}
.navbar .openMenu{
    display: none;
}


.navbar ul li a{
    color: rgb(80, 12, 80);
    transition: -5s;
  }
  .navbar ul li a:hover {
    color: rgb(164, 13, 202);
    display: block;
  }
  body{
    background: url(/images/coursebg.jpg);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 100vh;
    margin: 0;
  }
.body{
    display: flex;
    align-items: center;
    
    justify-content: center;
    min-height: 100vh;
    flex-direction: column;
}
.wrapper{
    width: 605px;
    background: rgb(245, 180, 245);
    border-radius: 15px;
    padding: 5px 5px 25px;
    margin-top: 10%;
    margin-left: 30%;
}
.wrapper header{
    font-size: 30px;
    font-weight: 600;
    text-align: center;
    border-bottom: solid 1px rgb(68, 15, 68);
}
.wrapper .body1{
    margin-top: 15px;
    display: flex;
    justify-content: center;
    font-size: 22px;
    text-align: left;
    flex-direction: column;
}

.body1 input{
    margin: 15px 0;
    font-size: 1rem;
    width: 100%;
}
 
 .mb-3 button[type=submit] {
    width: 15%;
    background-color: rgb(68, 15, 68);
    opacity: 0.3;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  } 
  .mb-3 button[type=submit]:hover{
      background-color: rgb(68, 15, 68);
      opacity: 0.6;
  } 
  #exampleInputEmail1 {
    width: 40%;
    font-size: 16px;
    padding: 12px 20px 12px 40px;
    border: 1px solid #ddd;
    margin-bottom: 12px;
  }
  .container ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    margin-top: 5px;
  }
  .container ul li{
    font-size: 18px;
    display: inline-block;
    margin: 0 125px 15px;
    display: flex;
   justify-content: space-between;
  background: rgb(243, 142, 213);
  margin: 5px;
  color: rgb(68, 15, 68);

  }
 .container ul li a {
    margin-top: -1px; 
    color: rgb(68, 15, 68);
    padding: 5px;
    font-size: 18px;
    display: inline-block;
    list-style: none;
    
  }
  #exampleCheck1{
    width: 15px;
  }

    </style>

    <title>Iqra | Task manager</title>
  </head>

  <body>
    <header>
      <nav class="navbar">
          <img src="/images/logo.png" alt="" class="logo">
      <div class="mainMenu">
          
          <ul >
            <li><a class="nav-link" aria-current="page" href="/">Home</a></li>
              <li><a href="/userprofile">Dashboard</a></li>
              <li><a class="nav-link" href="/course">Your Courses</a></li>
              <li><a href="/logout">Log Out</a></li>
          </ul>
      </div>
  
  </nav>
    <div class="wrapper">
      <header>Task Manager</header>
      <div class="body1">
      <main class="px-3">
        <form action="/task" method="POST">
          <div class="mb-3">
           
            <input
              type="text"
              name="content"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              placeholder="Your task"
            />

            <input
              type="checkbox"
              class="form-check-input"
              id="exampleCheck1"
              name="comp"
            />
            <label class="form-check-label" for="exampleCheck1"
              >Mark as done</label
            >

            <button type="submit" class="btn btn-primary mt-4 p-2"  id="submit">
              Add
            </button>
          </div>
          </div>
        </form>

        <div class="container background mt-3">
          <ul class="list-group mt-3">
            <% Tasks.forEach(details=> { %>
            <li class="list-group-item">
              <span class="item-name"> <%= details.content %> </span>
              <span class="item-name"> <%= details.iscomplete %> </span>
              <a
                href="task/edit/<%= details._id %>"
                type="button"
                class="btn btn-info btn1"
              >
                Edit
              </a>
              <a
                href="/task/remove/<%= details._id %>"
                type="button"
                class="btn btn-danger btn1"
              >
                Delete
              </a>
            </li>
            <% }) %>
          </ul>
        </div>
      </main>
    </div>
  </body>
</html>
