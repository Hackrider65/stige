<!Doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    
    <title>Todo</title>
    <style>
        *{
      margin: 0;
      border: 0;
      font-family: poppins, sans-serif;
  }
  
  .logo{
      width: 150px;
      cursor: pointer;
  }
  
  .navbar{
      width: 85%;
      margin: auto;
      padding: 10px 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: 0 100px;
      border-bottom: solid 1px rgb(102, 33, 102);
      position: relative;
      
  }
  .navbar ul li{
      list-style: none;
      display: inline-block;
      margin: 0 20px;
      position: relative;
  }
  
  .navbar ul li a{
      text-decoration: none;
      
  }
  .navbar ul li ::after{
      content: '';
      height: 3px;
      width: 0%;
      background: rgb(114, 18, 114);
      position: absolute;
      left: 0;
      bottom: -10px;
      transition: 0.5s;
      display: block;
  }
  .navbar ul li :hover::after{
      width: 100%;
  }
  .mainMenu .closeMenu{
      display:none;
  }
  .navbar .openMenu{
      display: none;
  }
  
  
  .navbar ul li a{
      color: rgb(80, 12, 80);
      transition: -5s;
    }
    .navbar ul li a:hover {
      color: rgb(164, 13, 202);
      display: block;
    }
    body{
      background: url(/images/coursebg.jpg);
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      height: 100vh;
      margin: 0;
    }
  .body{
      display: flex;
      align-items: center;
      
      justify-content: center;
      min-height: 100vh;
      flex-direction: column;
  }
  .wrapper{
      width: 605px;
      background: rgb(245, 180, 245);
      border-radius: 15px;
      padding: 5px 5px 25px;
      margin-top: 10%;
      margin-left: 30%;
  }
  .wrapper header{
      font-size: 30px;
      font-weight: 600;
      text-align: center;
      border-bottom: solid 1px rgb(68, 15, 68);
  }
  .wrapper .body1{
      margin-top: 15px;
      display: flex;
      justify-content: center;
      font-size: 22px;
      text-align: left;
      flex-direction: column;
  }
  
  .body1 input{
      margin: 15px 0;
      font-size: 1rem;
      width: 100%;
  }
  .body1 ul li input[type=text]{
      list-style: none;
  }
  button[type=submit] {
    width: 15%;
    background-color: rgb(68, 15, 68);
    opacity: 0.3;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  button[type=submit]:hover{
      background-color: rgb(68, 15, 68);
      opacity: 0.6;
  } 
  .list-group{
      list-style: none;
  }
  
   

    </style>
</head>

<body>
    <div>
        <body>
           
              <nav class="navbar">
                  <img src="/images/logo.png" alt="" class="logo">
              <div class="mainMenu">
                  
                  <ul >
                    <li><a class="nav-link" aria-current="page" href="/">Home</a></li>
                      <li><a href="/userprofile">Dashboard</a></li>
                      <li><a class="nav-link" href="/course">Your Courses</a></li>
                      <li><a href="/logout">Log Out</a></li>
                  </ul>
              </div>
              </nav>
              <div class="wrapper">
                  <header> EDIT TASK</header>
        <div class="body1">
        <div class="todo">


            <ul class="list-group">
                <% Tasks.forEach(details=> { %>
                    <% if (details._id==idTask) { %>
                        <li class="list-group-item">
                            <form action="/task/edit/<%= details._id %>" method="POST">
                                <input type="text" style="width: 80%;" value="<%= details.content %>" name="content"> <br>
                                <div class="bttn">
                                <input type="checkbox" style = "width:2%;" value="<%= details.iscomplete %>"
                                    name="comp">
                                    <label class="form-check-label" for="exampleCheck1" 
                                    >Mark as done</label>
                     
                                <button type="submit" class="btn btn-success">Confirm</button>
                                <a type="button" href="/" type="submit" class="btn btn-secondary">Cancel</a>
                            </div>
                            </form>
                        </li>
                        <% } else { %>

                            <% } %>
                                <% }) %>
            </ul>
            </div>
           </div> 
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
            crossorigin="anonymous"></script>


</body>

</html>